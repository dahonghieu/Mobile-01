<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

        <!-- Ảnh bìa -->
        <ImageView
            android:id="@+id/bgCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/bg_cover_coffee"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Overlay -->
        <View
            android:id="@+id/overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/overlay_bottom_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Full Name -->
        <EditText
            android:id="@+id/txtFullName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:backgroundTint="#FFFFFFFF"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.82"/>

        <!-- Email -->
        <EditText
            android:id="@+id/txtEmailRegister"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:backgroundTint="#FFFFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtFullName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.82"/>

        <!-- Password -->
        <EditText
            android:id="@+id/txtPasswordRegister"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:backgroundTint="#FFFFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtEmailRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.82"/>

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/txtConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:backgroundTint="#FFFFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtPasswordRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.82"/>

        <!-- REGISTER -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegisterAccount"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="REGISTER"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF7B54"
            app:cornerRadius="24dp"
            app:rippleColor="#33FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtConfirmPassword"
            app:layout_constraintWidth_percent="0.82"/>

        <!-- Text chuyển qua Login -->
        <TextView
            android:id="@+id/textLoginInstead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegisterAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- BACK TO LOGIN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Back to Login"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#00704A"
            app:cornerRadius="24dp"
            app:rippleColor="#33FFFFFF"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textLoginInstead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
