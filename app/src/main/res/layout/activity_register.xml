<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

        <!-- Hình ổ khoá -->
        <ImageView
            android:id="@+id/imageViewRegister"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_lock_lock"
            android:contentDescription="Register Icon"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Full Name -->
        <EditText
            android:id="@+id/txtFullName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Full Name"
            android:backgroundTint="#000000"
            android:inputType="textPersonName"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <!-- Email -->
        <EditText
            android:id="@+id/txtEmailRegister"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:backgroundTint="#000000"
            android:inputType="textEmailAddress"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtFullName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <!-- Password -->
        <EditText
            android:id="@+id/txtPasswordRegister"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:backgroundTint="#000000"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtEmailRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/txtConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:backgroundTint="#000000"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtPasswordRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.8" />

        <!-- Register Button -->

        <!-- Already have an account -->
        <Button
            android:id="@+id/btnRegisterAccount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FF9800"
            android:text="REGISTER"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtConfirmPassword"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/textLoginInstead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegisterAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Login"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/textLoginInstead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>